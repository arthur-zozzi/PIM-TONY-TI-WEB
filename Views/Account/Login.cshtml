@{
 <!-- Define título e layout da página -->
    ViewData["Title"] = "Login";
    Layout = "_Layout";

 <!-- Recupera o returnUrl enviado pelo controller -->
    var returnUrl = ViewData["ReturnUrl"] as string ?? string.Empty;

 <!-- Captura mensagens vindas via TempData ou ViewBag -->
    var tempMsg = TempData["Message"] as string;
    var tempSuccess = TempData["SuccessMessage"] as string;
    var viewMsg = ViewBag.Message as string;
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title mb-3 text-center">TONY | TI - LOGIN</h3>

                <!-- Exibe mensagem de sucesso do cadastro ou outras operações -->
                @if (!string.IsNullOrEmpty(tempSuccess))
                {
                <div class="alert alert-success" role="alert">@tempSuccess</div>
                }
                else if (!string.IsNullOrEmpty(tempMsg))
                {
                <div class="alert alert-success" role="alert">@tempMsg</div>
                }
                else if (!string.IsNullOrEmpty(viewMsg))
                {
                <div class="alert alert-success" role="alert">@viewMsg</div>
                }

                <!-- Erros de validação -->
                @if (!ViewData.ModelState.IsValid)
                {
                <div class="alert alert-danger" role="alert">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
                }

                <form asp-action="Login" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <!-- Transporta returnUrl para o POST -->
                    <input type="hidden" name="returnUrl" value="@(returnUrl ?? String.Empty)" />

                    <div class="form-group mb-3">
                        <label for="txtLogin">E-mail</label>
                        <!-- Campo de e-mail -->
                        <input type="email" name="email" class="form-control" id="txtLogin" placeholder="seu-email@email.com" required />
                    </div>

                    <div class="form-group mb-3 position-relative">
                        <label for="txtSenha">Senha</label>
                        <!-- Campo de senha -->
                        <input type="password" name="senha" class="form-control" id="txtSenha" placeholder="Insira sua senha" required />
                        <small class="form-text text-muted">Clique em "Entrar" para acessar.</small>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <!-- Botão de login -->
                        <button type="submit" class="btn btn-success">Entrar</button>

                        <!-- Link de recuperação de senha -->
                        <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-link">Esqueci minha senha</a>
                    </div>

                    <div class="text-center">
                        <!-- Link para cadastro -->
                        <a asp-controller="Account" asp-action="Register">Primeiro Acesso? Cadastre-se</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Validação simples no lado do cliente 
                (function () {
                    const form = document.querySelector('form[asp-action="Login"]');
                    if (!form) return;

                    form.addEventListener('submit', function (e) {
                        const email = form.querySelector('input[name="email"]').value.trim();
                        const senha = form.querySelector('input[name="senha"]').value;

                        if (!email || !senha) {
                            e.preventDefault();
                            alert('Preencha e-mail e senha.');
                            return false;
                        }
                        return true;
                    }, false);
                })();
    </script>
}
