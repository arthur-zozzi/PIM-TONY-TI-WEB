@{
    // Título exibido na página
    ViewData["Title"] = "Esqueci minha senha";
}

<h1>Recuperar senha</h1>

@if (!ViewData.ModelState.IsValid)
{
    // Exibe mensagens de erro de validação
<div class="text-danger">
    @Html.ValidationSummary(false)
</div>
}

<form asp-action="ForgotPassword" method="post">
    @Html.AntiForgeryToken() <!-- Proteção contra CSRF -->

    <div class="form-group" style="margin-bottom:10px;">
        <!-- Campo para o usuário informar o e-mail de recuperação -->
        <label for="email">Informe seu e-mail cadastrado</label>
        <input type="email" name="email" id="email" class="form-control" required />
    </div>

    <div style="margin-top:10px;">
        <!-- Envia o pedido de recuperação -->
        <button type="submit" class="btn btn-primary">Enviar código</button>

        <!-- Retorna à tela de login -->
        <a asp-action="Login" class="btn btn-secondary" style="margin-left:8px;">Voltar</a>
    </div>
</form>
